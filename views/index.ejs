<%- include('partials/header') %>

<div class="page-wrapper">

    <div class="container intro ">
        <h1>Welcome to my blog!</h1>
        <p>Here I share my thoughts , stories and experiences on everything from lifestyle and travel to tech and creativity.
        Take a look around and explore. I'm so glad you stopped by! </p>
        <hr>
    </div>


    <div class="container mt-5">

        <% if (posts.length === 0) { %>
            <p>No blog posts found for "<%= query %>". Try another search.</p>
        <% } else { %>
            <div class="row">
                <% posts.forEach((post, index) => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="<%= post.image %>" class="card-img-top" alt="Post image">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= post.title %></h5>
                                <p class="card-text"><%= post.summary %></p>
                                <div class="post-date">
                                    <div class="date-wrapper">
                                        <small>
                                            <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                        </small>
                                    </div>
                                </div>
                                <a href="/post/<%= post.id %>" class="btn btn-primary mt-auto">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>